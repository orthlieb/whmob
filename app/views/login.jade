doctype 5
html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="")
		meta(name="author", content="")
		link(rel="shortcut icon", href="/ico/favicon.png")
		title WhiteHat Sentinel Login
		
		// Bootstrap core CSS
		link(href="/bootstrap/css/bootstrap.css", rel="stylesheet")
		
		// Custom styles for this template
		link(href="/css/login.css", rel="stylesheet")

		script(src="/jquery/jquery.js")
		script(src="/jquery/jquery.validate.js")
		script(src="/bootstrap/js/bootstrap.min.js")
	body
		include jumbotron
		+jumbotron("Sentinel Mobile Login", "/img/MainLogo.png")
		.container
			.row
				.col-sm-12
					h2.text-center Please sign in
					.account-wall
						.form-section
							include flashboard
						img.profile-img(src='../img/LoginSilhouette.png', alt='')
						form.form-section(id="login-form", action="/login", method="post")
							input.form-control(type='text', name='id', placeholder='Username', autofocus='autofocus')
							input.form-control(type='password', name='password', id='password', placeholder='Password')
							button.btn.btn-lg.btn-primary.btn-block(type='submit')
								| Sign in
	//
	// ================================================== 
	// Placed at the end of the document so the pages load faster 
	script.
		$(document).ready(function () {
			$("#login-form").validate({
					rules: {
						username: {
							required: true
						},
						id: {
							required: true
						}
					},
					messages: {
						id: {
							required: "Please enter a valid username"
						},
						password: {
							required: "Please enter your password",
						},
					},						
					highlight: function (element) {
						$(element).closest(".form-group").removeClass("has-success").addClass("has-error");
						$(element).next().removeClass("hide");
					},
					unhighlight: function (element) {
						$(element).closest(".form-group").removeClass("has-error").addClass("has-success");
					}
			});
		});	
