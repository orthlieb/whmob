mixin navbar(pages)
	nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
		.container-fluid
			.navbar-header
				button.navbar-toggle(data-toggle="collapse",data-target="#navbar-collapse-items")
					span.sr-only Toggle Navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="https://sentinel.whitehatsec.com") WhiteHat Sentinel
				if (pages)
					ul.pagination.pagination-sm.pull-right(id="paginator")
						each page in pages
							case page.state
								when "active"	
									li.active: a(href=page.url) #{	page.title}
								when "disabled"	
									li.disabled: a #{page.title}
								default
									li: a(href=page.url) #{page.title}
			.collapse.navbar-collapse(id="navbar-collapse-items") 
				ul.nav.navbar-nav.navbar-right
					li
						a(href="/logout") Logout
